<%#= cl_image_tag('ou0gfofrjabyyjqw5no9',
      width: 400, height: 300, crop: :fill) %>

<div class="container prest">
<h1 class="text-center mb-4">List of cocktails</h1>
<%= link_to new_cocktail_path  do%>
  <h2> <i class="fas fa-plus"> </i>Add a cocktail</h2>
<% end %>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill, alt: "cocktail" %>)">
            <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
